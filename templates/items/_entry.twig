{% extends "layouts/base.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/items/itemDetail.css">
{% endblock %}

	

{% set entryCategories = entry.categories.all() %}

{% block body %}
<div class="container">
    <h1>{{ entry.title }}</h1>

    <img src="{{ entry.itemImage.one().getUrl("small") }}" alt="Image of {{ entry.title }}">
    <h2>Price</h2>

    <p>{{ (entry.price.getAmount() / 100) | number_format(2, '.', ',') }} {{ entry.price.getCurrency() }}</p>


    <h2>Categories</h2>
    <ul class="category-list">
        {% for category in entryCategories %}
            <li><a href="{{ category.url }}">{{ category.title }}</a></li>
        {% endfor %}
    </ul>

    <h2>Description</h2>
    <p>{{ entry.description }}</p>
</div>
{% endblock %}
